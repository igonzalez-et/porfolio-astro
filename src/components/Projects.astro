---
import HTMLIcon from "./icons/HTML.astro"
import CSSIcon from "./icons/CSS.astro"
import JavaScriptIcon from "./icons/JavaScript.astro"
import WordpressIcon from "./icons/Wordpress.astro"
import PHPIcon from "./icons/PHP.astro"

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-orange-900 text-white font-semibold",
        icon: HTMLIcon,
    },
    CSS: {
        name: "CSS",
        class: "bg-blue-900 text-white font-semibold",
        icon: CSSIcon,
    },
    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-yellow-900 text-white font-semibold",
        icon: JavaScriptIcon,
    },
    WORDPRESS: {
        name: "Wordpress",
        class: "bg-blue-200 text-black font-semibold",
        icon: WordpressIcon,
    },
    PHP: {
        name: "Php",
        class: "bg-black-200 text-white font-semibold",
        icon: PHPIcon,
    },
};

const PROJECTS = [
    {
        title: "Afers Digitals S.L. Web",
        description:
            "Creado desde Wordpress. Es una página web que muestra la información de la tienda informática, con un sistema de pago para las recogidas de productos.",
        link: "afersdigitals.com",
        github: "#",
        image: "/public/images/afersdigitals.webp",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, TAGS.WORDPRESS, TAGS.PHP],
    },
];
---

{
    PROJECTS.map((project) => (
        <article>
            <h3 class="text-2xl font-semibold text-blue-300 mb-2">
                {project.title}
            </h3>
            <p class="text-lg mb-4 text-pretty">{project.description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {project.tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${tag.class}`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10"
                src={project.image}
                alt={`Captura de pantalla del proyecto ${project.image}`}
            />
        </article>
    ))
}
