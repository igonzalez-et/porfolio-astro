---
import { getI18N } from '../i18n/';
import LanguageSelector from './LanguageSelector.astro';

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

---

<header class="relative flex flex-row justify-center items-center py-5 w-full xl:w-[1120px] mx-auto z-50">
    <nav class="fixed flex flex-row items-center gap-x-10 text-sm lg:text-base tracking-wide bg-blue-100 text-blue-800 py-1 px-5 top-7 rounded-lg z-50">
        <a class="hover:text-blue-800/55" href="#">{i18n.HEADER.ANCHOR_1}</a>
        <a class="hover:text-blue-800/55" href="#experience">{i18n.HEADER.ANCHOR_2}</a>
        <a class="hover:text-blue-800/55" href="#projects">{i18n.HEADER.ANCHOR_3}</a>
        <LanguageSelector />
    </nav>
</header>